<!DOCTYPE html>
<html>
  <head>
    <title>Punchcard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', "https://fonts.googleapis.com/css?family=Roboto" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

        <nav class="navbar-fixed" role="navigation">
          <div class="container nav-wrapper">
            <ul id="nav-mobile" class="left hide-on-med-and-down">
              <% if user_signed_in? %>
                <li><%= link_to "Home", merchant_path(current_user) %></li>
                <li><%= link_to "New Merchant", new_merchant_path(current_user) %></li>
                <li><%= link_to "Favorites", current_favorite_user_path(current_user) %></li>
                <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <a href="#" class="brand-logo center">Punchcard</a>
                <li><%= link_to "Log In", new_user_session_path %></li>
                <li><%= link_to "Sign Up", new_user_registration_path %></li>
            </ul>
          </nav>
          </div>
        </nav>
      <% end %>

      <div class="container">

      <%= render 'layouts/flash_messages' %>

      <%= yield %>
    </div>

  </body>
</html>
