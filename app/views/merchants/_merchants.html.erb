<% for merchant in @merchants %>
<div class="collection-item avatar">
  <span>
  <img alt="Icon" class="circle" src="<%=merchant.image%>" />
    <span class="title"><a href="<%=merchant.links.first.url%>" target="_blank"><%=merchant.name%></a></span>
    <a class="right" href="/merchants/<%=merchant.id%>"><i class="material-icons show-icon">pageview</i></a>
      <p>
        <a href="/merchants/<%=merchant.id%>/edit"><i class="material-icons">edit</i></a>
        <a data-confirm="Are you sure?" data-method="delete" href="/merchants/<%=merchant.id%>"><i class="material-icons">delete_forever</i></a>
      </p>
    </span>
</div>
<% end %>
