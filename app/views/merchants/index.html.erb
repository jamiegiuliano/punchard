<!-- User's Merchants
  <div class="collapsible-header active"><i class="material-icons">store</i>All Merchants</div>
  <%= render collection: @merchants, partial: 'users_merchants', as: :merchant %>
   -->
   <!-- INDEX PAGE -->
   <div class="index-page">

   <!-- User image/info -->
   <div class="row">
     <div class="col s12 m4 l4 left">
       <div class="card-panel grey lighten-5 z-depth-1">
         <div class="row valign-wrapper">
           <div class="col s7">
             <% if current_user.uid.blank? %>
               <img src="/assets/blank-uid.png" alt="" class="circle responsive-img">
             <% else %>
               <img src="https://avatars1.githubusercontent.com/u/<%= current_user.uid %>?s=460&v=4" alt="" class="circle responsive-img">
             <% end %>
           </div>
             <div class="col s5 right">
               <span class="black-text">
                 <% if !current_user.name.blank? %>
                   <%= current_user.name %>
                 <% else %>
                   <%= current_user.email[/[^@]+/] %>
                 <% end %>
               </span>
             </div>
           </div>
           <hr/>
           <div class="card-action loyalty-count center-align">
             Loyalty Programs: <%= current_user.merchants.count %>
           </div>
         </div>
       </div>

   <!-- Filter -->
   <div class="col s12 m8 l8">
   <div class="input-field">
     <% if !current_user.merchants.distinct.pluck(:location).empty? %>
       Filter by location:
       <br></br>
       <%= render 'merchants/filter' %>
     <% end %>
   </div>
   <br />

   <!-- User's Merchants -->
     <ul class="collapsible collection all-merchants">
       <li>
         <% if params["commit"].nil? || params["location"].empty? %>
           <div class="collapsible-header active"><%= link_to "Load Merchants...", merchants_path, class: "js-merchant-index" %></div>
         <% else %>
         <div class="collapsible-header active"><i class="material-icons">store</i>Merchants in: <%=params["location"]%></div>
         <%= render collection: @merchants, partial: 'merchants/users_merchants', as: :merchant %>
     <% end %>
       </li>
     </ul>

       </div>
     </div>
   </div>

   <!-- Materialize -->
   <script type="text/javascript" charset="utf-8">
   $(document).ready(function() {
    $('select').material_select();
   });

   $(document).ready(function(){
       $('.collapsible').collapsible();
     });
   </script>
