<%= render 'layouts/error_messages', object: merchant %>

<div class="form">
<%= form_for([current_user, merchant]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "Sterling Coffee Roasters" %>

  <%= f.label :location %>
  <%= f.text_field :location, placeholder: "Costa Mesa, CA" %>

  <%= f.fields_for :links, link do |link_builder| %>
    <%= link_builder.label :url, "URL:" %>
    <%= link_builder.text_field :url, placeholder: "https://squareup.com/" %>
  <% end %>

  <%= f.submit class: "btn-small" %>
<% end %>
</div>
