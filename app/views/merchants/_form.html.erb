<%= form_for(merchant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.select :location, options_for_select(Merchant.distinct.pluck(:location), include_blank: true) %>

  <%= f.fields_for :link, link do |link_builder| %>
    <%= link_builder.label :url, "URL:" %>
    <%= link_builder.text_field :url %>
  <% end %>

  <%= f.submit %>
<% end %>
