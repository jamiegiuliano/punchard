<%= render 'layouts/error_messages', object: @merchant %>

<%= form_for(@merchant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.fields_for :link, @merchant.build_link do |link_builder| %>
    <%= link_builder.label :url, "URL:" %>
    <%= link_builder.text_field :url %>
  <% end %>

  <%= f.submit %>
<% end %>
